{% extends 'base.html.twig' %}

{% block title %}Proyecto{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Detalle de Proyecto</h1>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proyecto.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ proyecto.name }}</td>
            </tr>
            <tr>
                <th>Initdate</th>
                <td>{{ proyecto.initdate ? proyecto.initdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Finishdate</th>
                <td>{{ proyecto.finishdate ? proyecto.finishdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>No</th>
                <td>{{ proyecto.no }}</td>
            </tr>
        </tbody>
    </table>
    <div class="mb-3">
        <a href="{{ path('app_proyecto_index') }}" class="btn btn-secondary">Volver a la lista</a>
        <a href="{{ path('app_proyecto_edit', {'id': proyecto.id}) }}" class="btn btn-warning">Editar</a>
    </div>
    {{ include('proyecto/_delete_form.html.twig') }}
</div>
{% endblock %}
