{% extends 'base.html.twig' %}

{% block title %}Proyecto index{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Listado de Proyectos</h1>
    <div class="mb-3">
        <a href="{{ path('app_proyecto_new') }}" class="btn btn-success">Crear nuevo proyecto</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Initdate</th>
                    <th>Finishdate</th>
                    <th>No</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for proyecto in proyectos %}
                <tr>
                    <td>{{ proyecto.id }}</td>
                    <td>{{ proyecto.name }}</td>
                    <td>{{ proyecto.initdate ? proyecto.initdate|date('Y-m-d') : '' }}</td>
                    <td>{{ proyecto.finishdate ? proyecto.finishdate|date('Y-m-d') : '' }}</td>
                    <td>{{ proyecto.no }}</td>
                    <td>
                        <a href="{{ path('app_proyecto_show', {'id': proyecto.id}) }}" class="btn btn-info btn-sm">Ver</a>
                        <a href="{{ path('app_proyecto_edit', {'id': proyecto.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No hay proyectos registrados.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Volver al inicio</a>
</div>
{% endblock %}
