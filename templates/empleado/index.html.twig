{% extends 'base.html.twig' %}

{% block title %}Listado de Empleados{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Listado de Empleados</h1>
            <a href="{{ path('app_empleado_new') }}" class="btn btn-light">
                <i class="fas fa-plus me-1"></i> Nuevo Empleado
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Tel√©fono</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for empleado in empleados %}
                        <tr>
                            <td>{{ empleado.name }}</td>
                            <td>{{ empleado.lastname }}</td>
                            <td>{{ empleado.email }}</td>
                            <td>{{ empleado.phone }}</td>
                            <td>
                                <span class="badge {% if empleado.status %}bg-success{% else %}bg-danger{% endif %}">
                                    {% if empleado.status %}Activo{% else %}Inactivo{% endif %}
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="{{ path('app_empleado_show', {'id': empleado.id}) }}" class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_empleado_edit', {'id': empleado.id}) }}" class="btn btn-sm btn-warning text-white">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted">No se encontraron empleados</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
