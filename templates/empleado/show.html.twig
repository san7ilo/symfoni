{% extends 'base.html.twig' %}

{% block title %}Detalle del Empleado{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Detalle del Empleado</h1>
            <div class="btn-group">
                <a href="{{ path('app_empleado_edit', {'id': empleado.id}) }}" class="btn btn-light">
                    <i class="fas fa-edit me-1"></i> Editar
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Información Personal</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Nombre</dt>
                                <dd class="col-sm-8">{{ empleado.name }}</dd>

                                <dt class="col-sm-4">Apellido</dt>
                                <dd class="col-sm-8">{{ empleado.lastname }}</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:{{ empleado.email }}">{{ empleado.email }}</a>
                                </dd>

                                <dt class="col-sm-4">Teléfono</dt>
                                <dd class="col-sm-8">{{ empleado.phone }}</dd>

                                <dt class="col-sm-4">Fecha de Nacimiento</dt>
                                <dd class="col-sm-8">{{ empleado.birthdate ? empleado.birthdate|date('d/m/Y') : '' }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Información Laboral</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Estado</dt>
                                <dd class="col-sm-8">
                                    <span class="badge {% if empleado.status %}bg-success{% else %}bg-danger{% endif %}">
                                        {% if empleado.status %}Activo{% else %}Inactivo{% endif %}
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Fecha de Contrato</dt>
                                <dd class="col-sm-8">{{ empleado.contractdate ? empleado.contractdate|date('d/m/Y') : '' }}</dd>

                                <dt class="col-sm-4">Salario</dt>
                                <dd class="col-sm-8">{{ empleado.salary|number_format(2, ',', '.') }} €</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_empleado_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver al listado
                </a>
                {{ include('empleado/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
